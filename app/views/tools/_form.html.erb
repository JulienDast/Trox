<div data-controller="map" >

<div class="row">
  <div class="column" style="background-color:#aaa;">

   <div id="map" data-markers="<%= @markers.to_json %>"></div>

  </div>
  <div class="column" style="background-color:#bbb;">


<%= form_with(model: tool) do |form| %>

  <% if tool.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(tool.errors.count, "error") %> prohibited this tool from being saved:</h2>

      <ul>
        <% tool.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :pic, style: "display: block" %>
    <%= form.file_field :pic %>
  </div>


  <div>
  <%= form.label :location, style: "display: block" %>
  <%= form.hidden_field :location, id: 'tool_location' %>

    <div id="geocoder" class="geocoder"></div>
  </div>




  <div>
    <%= form.label :caution, style: "display: block" %>
    <%= form.text_field :caution %>
  </div>

  <div>
    <%= form.label :condition, style: "display: block" %>
    <%= form.text_field :condition %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
</div>
