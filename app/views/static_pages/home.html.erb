<header class="masthead">
  <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
    <div class="d-flex justify-content-center">
      <div class="text-center">
        <h1 class="mx-auto my-0 text-uppercase">Trox</h1>
        <h2 class="text-white-50 mx-auto mt-2 mb-5">Site de particulier à particulier, d'outillage</h2>
        <% if user_signed_in? %>
          <%= link_to "Mon profil",current_user, class:"nav-link", style:"text-decoration:none" %>
        <% else %>
          <%= link_to "S'inscrire", new_user_registration_path, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</header>
