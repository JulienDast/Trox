<section id="sign_in" class="container">
<h2 >Se connecter</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="col" >
    <%= f.label :email, "Adresse email" %><br />
    <%= f.email_field :email , autofocus: true,class: "text", autocomplete: "email" %>
  </div>

  <div class="col" >
    <%= f.label :password, "Mot de passe" %><br />
    <%= f.password_field :password, class:"text", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="col" >
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me ,"Se souvenir de moi"  %>
    </div>
  <% end %>

  <div class="col" >
    <%= f.submit "Se connecter" %>
  </div>
  <% end %>
  <div class="form_link">
    <%= render "devise/shared/links" %>
  </div>
</section>
