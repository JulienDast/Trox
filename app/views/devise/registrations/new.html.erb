<h2>S'inscrire</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form">
    <%= f.label :firstname %><br />
    <%= f.text_field :firstname, required: true, minlength: 2, autofocus: true, autocomplete: "Prénom" %>
  </div>
    
  <div class="form">
    <%= f.label :lastname %><br />
    <%= f.text_field :lastname, required: true, autofocus: true, autocomplete: "Nom" %>
  </div>
  
  <div class= "form">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, required: true, autocomplete: "email" %>
  </div>

  <div class= "form">
  <%= f.label :phone %><br />
  <%= f.telephone_field :phone, autofocus: true, required: true, autocomplete: "Téléphone" %>
  </div>
   
  <div class= "form">
    <%= f.label :address %><br />
    <%= f.text_field :address, autofocus: true, required: true, autocomplete: "Adresse" %>
  </div>
   
  <div class= "form">
    <%= f.label :address_complement %><br />
    <%= f.text_field :address_complement, autofocus: true, autocomplete: "Complément d'adresse" %>
  </div>

  <div class= "form">
    <%= f.label :postcode %><br />
    <%= f.number_field :postcode, in: 10000..99999 ,required: true, autofocus: true, autocomplete: "Code postal" %>
  </div>
    
  <div class= "form">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Nouveau mot de passe" %>
  </div>
   
  <div class= "form">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "Nouveau mot de passe" %>
  </div>

  <div class="actions text-right">
    <%= f.submit "S'inscrire"%>
  </div>

<% end %>
<%= render "devise/shared/links" %>
